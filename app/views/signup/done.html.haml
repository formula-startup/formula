          .signup-last-advertisement__box__left__logos__appstore__image
            = image_tag src="https://web-jp-assets.mercdn.net/_next/static/images/app-store-a5c17948c6fd6d5b60b13d421cd60b35.svg",class: 'signup-last-advertisement__box__left__logos__appstore__image--image'
        .signup-last-advertisement__box__left__logos__google
          .signup-last-advertisement__box__left__logos__google__image
            = image_tag src="https://web-jp-assets.mercdn.net/_next/static/images/google-play-495575abb895b405aa6336b2a4304958.svg",class: 'signup-last-advertisement__box__left__logos__google__image--image'
