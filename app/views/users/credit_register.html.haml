= render "layouts/main-header"
-# パンくず最後のページだけspan、リンクはaタグを使用する。
-content_for :current_page do
  %span.current_page
    = link_to users_path do
      マイページ
    %i.fa.fa-chevron-right
    %span.current_page__now
      支払い方法
= render "layouts/breadcrumbs"
.user-mypage-wrapper
  .user-mypage-wrapper__main
    .user-mypage-wrapper__main__credit
      .user-mypage-wrapper__main__credit__title
        支払い方法
      .user-mypage-wrapper__main__credit__content
